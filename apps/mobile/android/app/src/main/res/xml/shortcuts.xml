<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <capability android:name="actions.intent.OPEN_APP_FEATURE">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.example.babyai"
            android:targetClass="com.example.babyai.MainActivity"
            android:data="babyai://assistant/open">
            <parameter android:name="feature" android:key="feature" />
        </intent>
    </capability>

    <shortcut
        android:shortcutId="feature_record_formula"
        android:enabled="true"
        android:shortcutShortLabel="@string/shortcut_record_formula"
        android:shortcutLongLabel="@string/shortcut_record_formula">
        <capability-binding android:key="actions.intent.OPEN_APP_FEATURE">
            <parameter-binding android:key="feature" android:value="formula" />
        </capability-binding>
    </shortcut>

