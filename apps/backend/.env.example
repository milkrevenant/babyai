APP_ENV=local
APP_NAME=BabyAI API
API_PREFIX=/api/v1

DATABASE_URL=postgres://babyai:babyai@localhost:5432/babyai
REDIS_URL=redis://localhost:6379/0

JWT_SECRET=replace-with-long-random-secret
JWT_ALGORITHM=HS256
JWT_AUDIENCE=
