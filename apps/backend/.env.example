APP_ENV=local
APP_NAME=BabyAI API
API_PREFIX=/api/v1
APP_PORT=8000

DATABASE_URL=postgres://babyai:babyai@localhost:5432/babyai
REDIS_URL=redis://localhost:6379/0

JWT_SECRET=replace-with-long-random-secret
JWT_ALGORITHM=HS256
JWT_AUDIENCE=
JWT_ISSUER=

# Dev token endpoint helper:
# - allow /dev/local-token outside APP_ENV=local (useful for staging)
# - keep false in production unless explicitly needed
ALLOW_DEV_TOKEN_ENDPOINT=false

# Local token helper:
# - fallback stable subject when /dev/local-token is called without sub
# - keep default for local only
LOCAL_DEV_DEFAULT_SUB=00000000-0000-0000-0000-000000000001

# Local bootstrap helper:
# - true: auto-create User when bearer token sub does not exist
# - keep false in production
AUTH_AUTOCREATE_USER=false

# Local subscription helper:
# - set AI_ONLY / AI_PHOTO / PHOTO_SHARE to force local subscription state
# - keep empty in production
LOCAL_FORCE_SUBSCRIPTION_PLAN=

# Local onboarding helper:
# - true: seed sample Event rows right after /onboarding/parent
# - keep false in production
ONBOARDING_SEED_DUMMY_DATA=false

# Test account login helper (recommended for QA builds to avoid exposing JWT)
# - when enabled, /auth/test-login issues JWT for matching email/password
# - keep disabled in production unless intentionally used
TEST_LOGIN_ENABLED=false
TEST_LOGIN_EMAIL=
TEST_LOGIN_PASSWORD=
TEST_LOGIN_NAME=QA Test User

# comma-separated list
CORS_ALLOW_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000

# OpenAI (required for /api/v1/ai/query and /api/v1/chat/query in non-test env)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5-mini
OPENAI_BASE_URL=https://api.openai.com/v1
AI_MAX_OUTPUT_TOKENS=1200
AI_TIMEOUT_SECONDS=60
